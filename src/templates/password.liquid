{% layout 'password' %}
<section class="password">
  {% include 'svg', name: 'logo', class: 'password__logo margin-bottom--xxl' %}
  {% form 'storefront_password', class: 'password__form' %}
    {% if form.errors %}
      {% for field in form.errors %}
        {% if field == 'form' %}
          <span class="password__error type--s margin-bottom--s">{{ form.errors.messages[field] }}</span>
        {% else %}
          <span class="password__error type--s margin-bottom--s">{{ form.errors.translated_fields[field] }} - {{ form.errors.messages[field] }}</span>
        {% endif %}
      {% endfor %}
    {% endif %}
    <input aria-label="Password" type="password" name="password" id="input-password" class="{% if form.errors %}error{% endif %}">
    <div class="password__button-wrap">
      <input aria-label="Sumbit" type="submit" name="submit" id="submit" value="" class="no-style">
      {% include 'svg', name: 'arrow', class: 'arrow' %}
    </div>
  {% endform %}
</section>